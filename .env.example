# Digital FTE Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# VAULT CONFIGURATION
# ===========================================

# Path to your Obsidian vault (absolute or relative)
VAULT_PATH=./vault

# ===========================================
# OPERATION MODE
# ===========================================

# Dry Run Mode: Set to 'true' to test without real actions
# Set to 'false' for production use
DRY_RUN=true

# ===========================================
# GMAIL WATCHER (Optional)
# ===========================================

# Path to Gmail OAuth credentials (downloaded from Google Cloud Console)
# Get credentials from: https://developers.google.com/gmail/api/quickstart/python
GMAIL_CREDENTIALS_PATH=~/.gmail_watcher/credentials.json

# Path to Gmail OAuth token (auto-generated after first auth)
GMAIL_TOKEN_PATH=~/.gmail_watcher/token.json

# Gmail check interval in seconds (default: 120)
# GMAIL_CHECK_INTERVAL=120

# ===========================================
# FILESYSTEM WATCHER
# ===========================================

# Path to drop folder (files dropped here trigger processing)
DROP_FOLDER_PATH=./vault/Inbox/Drop

# Filesystem check interval in seconds (default: 30)
CHECK_INTERVAL=30

# ===========================================
# ORCHESTRATOR / RALPH LOOP
# ===========================================

# Maximum iterations for Ralph Wiggum loop (default: 10)
MAX_ITERATIONS=10

# ===========================================
# LOGGING
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ===========================================
# FUTURE: MCP SERVERS (Silver/Gold Tier)
# ===========================================

# Email MCP Configuration
# EMAIL_MCP_URL=http://localhost:8808
# EMAIL_SEND_ENABLED=false

# Browser MCP Configuration (Playwright)
# PLAYWRIGHT_MCP_URL=http://localhost:8809
# PLAYWRIGHT_HEADLESS=true

# Payment MCP Configuration
# PAYMENT_MCP_ENABLED=false
# PAYMENT_APPROVAL_REQUIRED=true

# ===========================================
# SECURITY
# ===========================================

# Never change these in production - use secure credential managers
# For banking credentials, use OS keychain or 1Password CLI
# BANK_API_TOKEN=your_token_here
# WHATSAPP_SESSION_PATH=./vault/.sessions/whatsapp
